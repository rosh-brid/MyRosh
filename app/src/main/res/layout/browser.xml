<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:ads="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:id="@+id/coordinator">

    <LinearLayout
         android:layout_height="match_parent"
         android:layout_width="300dp"
         android:visibility="gone"
         android:background="#333333"
         android:orientation="vertical"
         android:id="@+id/liner">

        <LinearLayout
             android:layout_height="40dp"
             android:layout_width="match_parent"
             android:gravity="center_vertical">

            <TextView
                 android:layout_height="30dp"
                 android:layout_width="30dp"
                 android:layout_marginEnd="50dp"
                 android:gravity="center"
                 android:background="#ff0000"
                 android:layout_marginStart="10dp"
                 android:id="@+id/keluar"
                 android:text="X" />

            <ImageView
                 android:layout_height="30dp"
                 android:layout_width="30dp"
                 android:src="@drawable/google"
                 android:layout_marginEnd="30dp"
                 android:id="@+id/google" />

            <ImageView
                 android:layout_height="30dp"
                 android:layout_width="30dp"
                 android:src="@drawable/duck"
                 android:layout_marginEnd="30dp"
                 android:id="@+id/duck" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:layout_margin="10dp"
             android:orientation="vertical">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="center"
                 android:background="@drawable/bg_kotak"
                 android:padding="10dp"
                 android:layout_margin="20dp"
                 android:backgroundTint="#555555"
                 android:textColor="#ffffff"
                 android:id="@+id/unduhan"
                 android:text="Unduhan" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="center"
                 android:background="@drawable/bg_kotak"
                 android:padding="10dp"
                 android:layout_margin="20dp"
                 android:backgroundTint="#555555"
                 android:textColor="#ffffff"
                 android:id="@+id/tes_jaringan"
                 android:text="Speed Test" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:background="#000000"
         android:orientation="vertical">

        <com.google.android.gms.ads.AdView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             ads:adSize="BANNER"
             android:layout_margin="10dp"
             ads:adUnitId="ca-app-pub-2534537144295464/4309541326"
             android:id="@+id/iklan" />

        <LinearLayout
             android:layout_height="40dp"
             android:layout_width="match_parent"
             android:gravity="center_vertical"
             android:background="#333333">

            <ImageView
                 android:layout_height="30dp"
                 android:layout_width="30dp"
                 android:src="@drawable/nav"
                 android:layout_marginEnd="50dp"
                 android:layout_marginStart="10dp"
                 android:id="@+id/nav" />

            <EditText
                 android:layout_height="30dp"
                 android:layout_width="200dp"
                 android:layout_marginEnd="10dp"
                 android:background="#ffffff"
                 android:hint="Link"
                 android:padding="3dp"
                 android:textColorHint="#555555"
                 android:textSize="10sp"
                 android:textColor="#000000"
                 android:textStyle="italic"
                 android:id="@+id/tulis" />

            <TextView
                 android:layout_height="30dp"
                 android:layout_width="30dp"
                 android:background="#ffffff"
                 android:gravity="center"
                 android:textColor="#000000"
                 android:textStyle="bold"
                 android:text="Run"
                 android:id="@+id/cari" />

        </LinearLayout>

        <FrameLayout
             android:layout_height="15dp"
             android:layout_width="match_parent"
             android:visibility="gone"
             android:background="#999999"
             android:layout_margin="3dp"
             android:padding="2dp"
             android:id="@+id/proses">

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="0dp"
                 android:background="#ff00ff"
                 android:layout_gravity="start"
                 android:id="@+id/gambar_jalan">

            </LinearLayout>

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:textSize="8sp"
                 android:textColor="#00ff00"
                 android:id="@+id/persen"
                 android:layout_gravity="center"
                 android:text="0%" />

        </FrameLayout>

        <LinearLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:layout_margin="5dp">

            <android.webkit.WebView
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:id="@+id/web">

            </android.webkit.WebView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>